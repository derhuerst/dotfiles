[core]
	pager = cat
	excludesfile = ~/.gitignore
[user]
	name = Jannis R
	email = mail@jannisr.de
[credential]
	helper = osxkeychain
[alias]
	a = add
	aa = add --all
	c = commit -m
	cl = clone
	d = diff
	l = log --graph --abbrev-commit --all --date=relative --format=format:'%C(blue)%h%C(reset) %C(dim white)by %an %ar:%C(reset) %s'
	p = push origin master
	s = status --short
	pull-request = !hub pull-request
	pr = pull-request
	issues = !hub browse -- issues
	i = !hub browse -- issues
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
