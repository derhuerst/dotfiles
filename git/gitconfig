[core]
	editor = nano
	pager = diff-highlight | diff-so-fancy
	excludesfile = ~/.gitignore
[user]
	name = Jannis R
	email = mail@jannisr.de
[credential]
	helper = osxkeychain
[alias]
	a = add
	aa = add --all
	c = commit -m
	cl = clone
	d = diff
	l = log -10 --abbrev-commit --reverse --date=relative --decorate=short --format=format:'\
%C(red)%<(7)%h \
%C(dim white)%<(11,trunc)%an \
%<(12,trunc)%ar \
%C(reset)%s'
	ll = log -10 --abbrev-commit --reverse --date=relative --decorate=short --format=format:'\
%C(red)%<(7)%h \
%C(dim white)%<(11,trunc)%an \
%<(12,trunc)%ar \
%C(reset)%C(yellow)%s%C(reset)' --stat-name-width=50 --stat-count=20
	p = push origin
	pl = pull
	s = status --short
	pull-request = !hub pull-request
	pr = pull-request
	issues = !hub browse -- issues
	i = issues
	r = remote -v
	f = flow
	ff = flow feature
	fr = flow release
	fh = flow hotfix
	fs = flow support
	show = show --format=format:'%n\
%C(red)%h \
%C(yellow)%D %n\
%C(white)%an \
%C(dim white)%ar %n\
%C(reset)%s %n'
	tags = tag -l
	ref = show-ref --tags --heads --abbrev -h
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[hub]
	protocol = https
[url "https://github.com"]
	insteadOf = git://github.com
[push]
	default = matching
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red bold 52
	newNormal = green
	newHighlight = green bold 22
