[core]
	pager = cat
	excludesfile = ~/.gitignore
[user]
	name = Jannis R
	email = mail@jannisr.de
[credential]
	helper = osxkeychain
[alias]
	a = add
	aa = add --all
	c = commit -m
	cl = clone
	d = diff
	l = log -10 --abbrev-commit --reverse --date=relative --format=format:'%C(blue)%h%C(reset) %C(dim white)by %an %ar:%C(reset) %s'
	p = push origin
	pl = pull
	s = status --short
	pull-request = !hub pull-request
	pr = pull-request
	issues = !hub browse -- issues
	i = issues
	r = remote -v
	f = flow
	ff = flow feature
	fr = flow release
	fh = flow hotfix
	fs = flow support
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[hub]
	protocol = https
[url "https://github.com"]
	insteadOf = git://github.com
[push]
	default = matching
